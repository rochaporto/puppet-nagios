service nrpe
{
        flags           = REUSE
	type		= UNLISTED
	port		= 5666
        socket_type     = stream
        wait            = no
        user            = nrpe
        group           = nrpe
        server          = /usr/sbin/nrpe
        server_args     = -c /etc/nagios/nrpe.cfg --inetd
        log_on_failure  += USERID
	env             += PYTHONPATH=$PYTHONPATH:/opt/lcg/lib64/python2.4/site-packages PATH=/usr/sue/sbin:/usr/sue/bin:/usr/kerberos/sbin:/usr/kerberos/bin:/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin:<%= nrpe_path %> CSEC_MECH=ID
}
